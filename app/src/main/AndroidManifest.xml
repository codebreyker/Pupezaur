<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pupezaur">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcher_logo"
        android:label="Astrid Swim"
        android:roundIcon="@mipmap/launcher_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <!--pagina de register        -->
        <activity
            android:name=".PhoneConnection.AdminPhoneRegister"
            android:label="Astrid Swim">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- pagina de login -->
        <activity
            android:name=".PhoneConnection.PhoneSignin"
            android:label="Astrid Swim">
        </activity>

<!--        pagina principala-->
        <activity
            android:name=".MainActivities.MainActivity"
            android:label="Astrid Swim">
        </activity>

        <!-- pagina de chat-->
        <activity
            android:name=".MainActivities.ChatActivity"
            android:windowSoftInputMode="adjustResize"
            android:label="Chat"
            android:parentActivityName=".MainActivities.MainActivity"/>

        <!-- pagina de setari -->
        <activity
            android:name=".MainActivities.SettingsActivity"
            android:label="Settings"
            android:parentActivityName=".MainActivities.MainActivity" />

    </application>

</manifest>