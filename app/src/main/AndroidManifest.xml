<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.pupezaur">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcher_logo"
        android:label="Astrid Swim"
        android:roundIcon="@mipmap/launcher_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">

        <!-- pagina de register -->
        <activity
            android:name=".PhoneConnection.AdminPhoneRegister"
            android:label="Astrid Swim">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- pagina de login -->

        <!-- pagina principala -->
        <activity
            android:name=".Days.Monday"
            android:label="Astrid Swim"></activity>
        <activity
            android:name=".Days.Tuesday"
            android:label="Astrid Swim"></activity>
        <activity
            android:name=".Days.Wednesday"
            android:label="Astrid Swim"></activity>
        <activity
            android:name=".Days.Thursday"
            android:label="Astrid Swim"></activity>
        <activity
            android:name=".Days.Friday"
            android:label="Astrid Swim"></activity>
        <activity
            android:name=".Days.Saturday"
            android:label="Astrid Swim"></activity>
        <activity
            android:name=".Days.Sunday"
            android:label="Astrid Swim"></activity>

        <!-- pagina de chat -->
        <activity
            android:name=".MainActivities.ChatActivity"
            android:label="Chat"
            android:parentActivityName=".Days.Monday"
            android:windowSoftInputMode="adjustResize" />

        <!-- pagina de setari -->
        <activity
            android:name=".MainActivities.SettingsActivity"
            android:label="Settings"
            android:parentActivityName=".Days.Monday" />

<!--        Parent app-->

<!--        pagina de login-->
        <activity
            android:name="com.example.parentsapp.PhoneConnections.UserPhoneRegister"
            android:label="Astrid Swim">


        </activity>
<!--        pagina principala-->
        <activity
            android:name="com.example.parentsapp.MainActivities.ParentActivityMain"
            android:label="Astrid Swim">
        </activity>
<!--        pagina de chat-->
        <activity
            android:name="com.example.parentsapp.MainActivities.UserChatActivity"
            android:label="Chat">
        </activity>

    </application>




</manifest>